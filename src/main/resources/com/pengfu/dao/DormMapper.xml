<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.pengfu.dao.DormMapper">

	<!-- 封装宿舍对象 -->
	<resultMap id="dormMap" type="dorm">
		<result property="name" column="name"/>
		<result property="bid" column="bid"/>
		<!-- 封装学生集合对象 -->
		<collection property="students" ofType="student">
			<result property="sid" column="sid"/>
			<result property="password" column="password"/>
			<result property="name" column="name"/>
			<result property="gender" column="gender"/>
			<result property="idCard" column="id_card"/>
			<result property="college" column="college"/>
			<result property="classes" column="classes"/>
			<result property="phone" column="phone"/>
		</collection>
	</resultMap>
		
	<!-- 根据宿舍楼查询所有宿舍 -->
	<select id="selectAllByBid" resultMap="dormMap">
		select
			dorm.name, student.*, dorm.bid
		from
			dorm
		left outer join
			student
		on
			student.did = dorm.did
		where
			dorm.bid = #{bid}
	</select>
	
	<!-- 根据宿舍楼查询所有宿舍号 -->
	<select id="selectAllIdByBid" resultType="String">
		select
			dorm.name
		from
			dorm
		where
			dorm.bid = #{bid}
	</select>
	
	<!-- 添加 -->
	<insert id="insert" parameterType="dorm">
		insert into 
			dorm(name, bid)
		values
			(#{name},#{bid})
	</insert>

	<!-- 删除 -->
	<delete id="delete">
		delete from 
			dorm 
		where 
			name = #{name} and bid = #{bid};
	</delete>

</mapper>