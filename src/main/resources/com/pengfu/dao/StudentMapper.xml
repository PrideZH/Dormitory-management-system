<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.pengfu.dao.StudentMapper">

	<select id="selectById" resultType="student">
		select * from student where sid = #{id}
	</select>

	<insert id="insert" parameterType="com.pengfu.entity.Student">
		insert into student(sid,password,name,gender,id_card,college,classes,phone)
		values(#{sid},#{password},#{name},#{gender},#{idCard},#{college},#{classes},#{phone})
	</insert>
	
	<select id="selectByName" parameterType="string" resultType="student">
		select * from student where name like #{name}
	</select>
	
</mapper>